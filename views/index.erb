<div class="row">
  <div class="col-md-6">
    <h1>Employees</h1>
    <div class="list-group">
      <% @employees.each do |employee| %>
        <div class="row">
          <div class="col-xs-9">
            <a href="/employees/<%= employee.id %>">
              <button class="list-group-item">
                <%= employee.name %>
              </button>
            </a>
          </div>
          <div class="col-xs-3">
            <form class="" action="/employees/<%= employee.id() %>/delete" method="post">
              <input type="hidden" name="_method" value="delete">
              <button type="submit" class=" form-control btn-block btn-danger">Delete</button>
            </form>
          </div>
        </div>
      <% end %>
    </div>

    <form class="form-inline" action="/employees/new" method="post">
      <input class="form-control" type="text" name="employee_name" required>
      <button class="btn btn-primary" type="submit">Add Employee</button>
    </form>
  </div>
</div>

